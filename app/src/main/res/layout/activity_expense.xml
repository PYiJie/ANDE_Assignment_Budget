<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExpenseActivity">

    <TextView
        android:id="@+id/tvTotalSpentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dm_sans_bold"
        android:text="Total: "
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/tvTotalAmtSpent"
        app:layout_constraintTop_toTopOf="@+id/tvTotalAmtSpent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="35dp" />

    <TextView
        android:id="@+id/tvTotalSpentTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/dm_sans_bold"
        android:text="Expense"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTotalAmtSpent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dm_sans_bold"
        android:text="$1812"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/btnDatePicker"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tvTotalSpentTitle"
        tools:layout_editor_absoluteY="69dp" />

    <Button
        android:id="@+id/btnDatePicker"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginEnd="28dp"
        android:background="@android:color/transparent"
        android:drawableEnd="@drawable/ic_baseline_arrow_drop_down"
        android:fontFamily="@font/dm_sans"
        android:text="September 2020"
        android:textColor="@color/primary_color"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="HardcodedText"
        tools:layout_editor_absoluteY="62dp" />

</androidx.constraintlayout.widget.ConstraintLayout>